{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@api/*": [
        "./src/@api/*"
      ]
    },
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  }
}